{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/server/node_modules/nodemon/bin/nodemon.js",
            "name": "Server",
            "cwd": "${workspaceFolder}/server",
            "program": "${workspaceFolder}/server/src/server.js"
        },
        {
            "name": "Web",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}/client"
        }
    ]
}